pipeline {
    agent any
    environment {
        HTTP_PROXY = 'http://127.0.0.1:7897'
        HTTPS_PROXY = 'http://127.0.0.1:7897'
        NO_PROXY = 'localhost,127.0.0.1'
    }
    stages {
        stage('Setup Node.js Environment') {
            steps {
                script {
                    // Init
                    powershell '''
                         Remove-Item -Path "hanakoi-llm" -Recurse -Force -ErrorAction SilentlyContinue
                    '''

                    // Run Docker container and execute commands inside it
                    powershell '''
                        git clone https://github.com/HarrySunV9x/hanakoi-llm; `
                        cd hanakoi-llm; `
                        python install -r requirement.txt
                        python main.py
                    '''
                }
            }
        }
    }
}
